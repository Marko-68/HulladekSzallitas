@model IEnumerable<Hulladékszállítás.Models.Naptar>

@{
    ViewData["Title"] = "Naptars";
}

<h1>Naptár</h1>

<p>
    <a asp-action="Create" class="btn btn-primary mb-3">Új hozzáadása</a>
</p>
<div class="table-responsive">
    <table class="table table-striped table-hover table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.datum)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Szolgaltatas)
                </th>
            </tr>
        </thead>

    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.datum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Szolgaltatas.jelentes)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-light">Módosítás</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-light">Részletek</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Törlés</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
