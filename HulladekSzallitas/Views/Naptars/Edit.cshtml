@model Hulladékszállítás.Models.Naptar

@{
    ViewData["Title"] = "Edit";
}

<h1>Módosítás</h1>

<h4>Naptar</h4>
<hr />
<div class="row">
    <div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="datum" class="control-label"></label>
                <input asp-for="datum" class="form-control" />
                <span asp-validation-for="datum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SzolgaltatasId" class="control-label"></label>
                <select asp-for="SzolgaltatasId" class="form-control" asp-items="ViewBag.SzolgaltatasId"></select>
                <span asp-validation-for="SzolgaltatasId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Mentés" class="btn btn-primary" />
            </div>
        </form>
    </div>
    </div>
</div>

<div>
    <a asp-action="Index">Vissza</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
