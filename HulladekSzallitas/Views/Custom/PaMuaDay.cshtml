@{
    ViewData["Title"] = "Papír és Műanyag Szállítások Egy Napon";
}

<div class="container mt-4">
    <h2>Papír és Műanyag Szállítások Egy Napon</h2>

    @if (Model != null)
    {
        <table class="table table-striped table-hover">
            <thead class="thead-dark text-center">
                <tr>
                    <th>Dátum</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var date in Model)
                {
                    <tr>
                        <td class="text-dark">
                            @date.ToString("yyyy.MM.dd")
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            Nincsenek olyan napok, amikor papír és műanyag hulladékot is szállítottak volna.
        </div>
    }
</div>
