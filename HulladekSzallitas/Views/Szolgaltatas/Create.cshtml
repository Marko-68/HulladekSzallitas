@model Hulladékszállítás.Models.Szolgaltatas

@{
    ViewData["Title"] = "Create";
}

<h1>Hozzáadás</h1>

<h4>Szolgaltatas</h4>
<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="tipus" class="control-label"></label>
                    <input asp-for="tipus" class="form-control" />
                    <span asp-validation-for="tipus" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="jelentes" class="control-label"></label>
                    <input asp-for="jelentes" class="form-control" />
                    <span asp-validation-for="jelentes" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Hozzáadás" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Vissza</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
