@model IEnumerable<Hulladékszállítás.Models.Szolgaltatas>

@{
    ViewData["Title"] = "Szolgaltatas";
}

<h1>Szolgáltatás</h1>

<p>
    <a asp-action="Create" class="btn btn-primary mb-3">Új hozzáadása</a>
</p>
@if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.tipus)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.jelentes)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.tipus)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.jelentes)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-light">Módosítás</a> |
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-light">Részletek</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Törlés</a>
                        </td>
                    </tr>
                }
            </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            Jelenleg nincsenek elérhető szállítási adatok.
        </div>
    }
